    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
            ],
            "cwd": "${workspaceRoot}/code",
            "program": "${workspaceFolder}/code/hello.ts",
            "preLaunchTask": "tsc: build - code/tsconfig.json",
            "outFiles": ["${workspaceFolder}/output/**/*.js"],            
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
